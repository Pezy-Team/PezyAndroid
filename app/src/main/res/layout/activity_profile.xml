<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ProfileActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pezy_orange"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    app:srcCompat="@drawable/ic_arrow_back_white_24dp"
                    android:background="?attr/selectableItemBackground"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/text_white"
                    android:layout_weight="1"
                    android:text="@string/prof_title"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal|center_vertical"/>

                <LinearLayout
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:paddingVertical="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-25dp"
                    android:gravity="right|end|top">

                    <Button
                        android:id="@+id/btnActivateStore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prof_activate_store"
                        android:paddingHorizontal="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/pezy_orange"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_marginBottom="-10dp"
                    app:srcCompat="@drawable/ic_profile"/>

                <TextView
                    android:id="@+id/txtNameTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_white"
                    android:text="Wesarut"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/loading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#68A5A4A4"
                        android:padding="15dp"
                        android:text="@string/prof_user_details"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/prof_name_surname"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_black"/>

                            <TextView
                                android:id="@+id/txtNameSurname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/prof_name_surname"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/edittext_color"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/prof_edit"
                            android:textSize="20sp"
                            android:textColor="#1580D5"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/edittext_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/prof_idcard"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_black"/>

                            <TextView
                                android:id="@+id/txtIDCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/prof_confirmed"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/edittext_color"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/prof_edit"
                            android:textSize="20sp"
                            android:textColor="#1580D5"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/edittext_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/prof_changepwd"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_black"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/prof_confirmed"
                                android:inputType="textPassword"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/edittext_color"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/prof_edit"
                            android:textSize="20sp"
                            android:textColor="#1580D5"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/edittext_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/prof_tel"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_black"/>

                            <TextView
                                android:id="@+id/txtTelephone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/prof_confirmed"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/edittext_color"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/prof_edit"
                            android:textSize="20sp"
                            android:textColor="#1580D5"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/edittext_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/prof_email"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_black"/>

                            <TextView
                                android:id="@+id/txtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/prof_confirmed"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/edittext_color"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/prof_addemail"
                            android:textSize="20sp"
                            android:textColor="@color/text_white"
                            android:textStyle="bold"
                            android:background="@drawable/ic_profile_email_button"
                            android:textAlignment="center"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/edittext_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/prof_addr"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_black"/>

                            <TextView
                                android:id="@+id/txtAddr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/prof_confirmed"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/edittext_color"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/prof_addaddr"
                            android:textSize="20sp"
                            android:textColor="@color/text_white"
                            android:textStyle="bold"
                            android:background="@drawable/ic_profile_email_button"
                            android:textAlignment="center"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/edittext_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/prof_connect_facebook"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_black"/>

                            <TextView
                                android:id="@+id/txtFBStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/prof_confirmed"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/edittext_color"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/prof_connect"
                            android:textSize="20sp"
                            android:textColor="@color/text_white"
                            android:textStyle="bold"
                            android:drawableStart="@drawable/ic_facebook_logo"
                            android:background="#3B5998"
                            android:textAlignment="center"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/edittext_color"/>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</layout>
